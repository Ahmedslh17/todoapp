    Appuie sur <strong>Partager</strong> â†’ <strong>Ajouter Ã  lâ€™Ã©cran dâ€™accueil</strong>.
  </p>
</div>

<script>
  let deferredPrompt;

  window.addEventListener("beforeinstallprompt", (e) => {
    e.preventDefault();
    deferredPrompt = e;
    document.getElementById("install-box").classList.remove("hidden");
  });

  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("install-btn");
    if (!btn) return;

    btn.addEventListener("click", async () => {
      if (!deferredPrompt) return;

      deferredPrompt.prompt();
      await deferredPrompt.userChoice;
      deferredPrompt = null;

      document.getElementById("install-box").classList.add("hidden");
    });
  });

  function checkiOS() {
    const ua = navigator.userAgent;
    const isIOS = /iphone|ipad|ipod/i.test(ua);
    const isSafari = /^((?!chrome|android).)*safari/i.test(ua);

    if (isIOS && isSafari && !window.matchMedia("(display-mode: standalone)").matches) {
      document.getElementById("ios-tip").classList.remove("hidden");
    }
  }

  checkiOS();
</script>

