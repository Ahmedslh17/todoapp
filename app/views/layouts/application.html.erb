<!-- POPUP INSTALL ANDROID -->
<div id="install-box" class="hidden fixed bottom-4 left-1/2 -translate-x-1/2
             bg-white shadow-xl p-4 rounded-2xl border w-80 text-center z-50">
  <p class="font-semibold mb-2">Installe lâ€™application ğŸ“±</p>
