<%# app/views/tasks/edit.html.erb %>
<section class="mx-auto mt-8 max-w-xl rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
  <h1 class="text-xl font-semibold tracking-tight mb-2">
    Modifier la tâche
  </h1>
  <p class="text-sm text-slate-500 mb-4">
    Modifie le titre ou le statut de ta tâche. Le rappel programmé est affiché ci-dessous s’il existe.
  </p>

  <div class="space-y-4">
    <%= render "form", task: @task %>

    <% if @task.reminder_at.present? %>
      <div class="rounded-xl bg-slate-50 border border-slate-200 px-4 py-3 text-sm text-slate-600">
        <span class="font-medium">Rappel programmé :</span>
        <%= l @task.reminder_at.in_time_zone("Europe/Paris"), format: "%d/%m/%Y à %H:%M" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex flex-wrap gap-3">
    <%= link_to "← Retour à la liste", tasks_path,
          class: "inline-flex items-center rounded-xl border border-slate-300 px-4 py-2 text-sm hover:bg-slate-50" %>

    <%= link_to "Voir la tâche", @task,
          class: "inline-flex items-center rounded-xl border border-indigo-600 px-4 py-2 text-sm text-indigo-600 hover:bg-indigo-50" %>
  </div>
</section>
